<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dip" />
            <gradient android:angle="-90" android:endColor="@color/colorButtonOrangeClick" android:startColor="@color/colorButtonOrangeClick" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2px" android:color="#FF0000" />
            <corners android:radius="30dip" />
            <gradient android:angle="-90" android:endColor="@color/colorButtonOrange" android:startColor="@color/colorButtonOrange" />
        </shape>
    </item>
</selector>